<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartfitness.mapper.EquipmentMapper">

<!--운동기구 추가-->
<insert id="addEm" parameterType="java.util.Map">
    insert into sf_equipment values(null,#{em_name},#{em_video},#{em_part},#{em_type},#{em_img1},#{em_img2})
</insert>

<!--운동기구 수정-->
<update id="updateEm" parameterType="java.util.Map">
	update sf_equipment
	set em_name=#{em_name},em_video=#{em_video},em_part=#{em_part},em_type=#{em_type},em_img1=#{em_img1},em_img=#{em_img2}
    where em_seq=#{em_seq}
</update>

<!--운동기구 타입확인-->
<select id="selectAll" resultType="java.util.Map">
	select * from sf_equipment
</select>
<select id="selectF" resultType="java.util.Map">
	select * from sf_equipment where em_type like '%f%'
</select>
<select id="selectM" resultType="java.util.Map">
	select * from sf_equipment where em_type like '%m%'
</select>
<select id="selectC" resultType="java.util.Map">
	select * from sf_equipment where em_type like '%c%'
</select>

</mapper>